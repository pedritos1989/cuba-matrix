<div class="modal fade" id="shoppingCartModal" tabindex="-1" role="dialog" aria-labelledby="shoppingCartModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shoppingCartModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="info-area">
                    <div id="helpBlock" class="help-block text-muted font-weight-bold">
                        <i class="fa fa-money fa-lg text-info"></i>
                        <span></span>
                    </div>
                </div>
                <div class="form-area"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i
                            class="fa fa-remove"></i> {{ 'sylius.ui.cancel'|trans }}</button>
                <button type="button" class="btn btn-primary action-save"><i
                            class="fa fa-shopping-cart"></i> {{ 'sylius.ui.add_to_cart.short'|trans }}</button>
            </div>
        </div>
    </div>
</div>